@inject NavigationManager NavigationManager

<MudTabs Elevation="0" Rounded="true" PanelClass="pa-6" @bind-ActivePanelIndex="_activeIndex" Centered="true">
    <MudTabPanel Text="Login" OnClick="@(() => NavigationManager.NavigateTo("login"))">
    </MudTabPanel>
    <MudTabPanel Text="Register" OnClick="@(() => NavigationManager.NavigateTo("register"))">
    </MudTabPanel>
</MudTabs>

@code {

    int _activeIndex = 0;
    
    protected override void OnInitialized()
    {
        if (NavigationManager.Uri.Contains("login"))
        {
            _activeIndex = 0;
        }
        else if (NavigationManager.Uri.Contains("register"))
        {
            _activeIndex = 1;
        }
    }

}
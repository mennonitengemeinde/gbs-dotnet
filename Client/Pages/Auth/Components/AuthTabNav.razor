@inject NavigationManager NavigationManager

<MudTabs Elevation="0" Rounded="true" PanelClass="pa-6" @bind-ActivePanelIndex="_activeIndex" Centered="true">
    <MudTabPanel Text="Login" OnClick="@(() => NavigationManager.NavigateTo("login"))">
        @* <MudText>Content One</MudText> *@
    </MudTabPanel>
    <MudTabPanel Text="Register" OnClick="@(() => NavigationManager.NavigateTo("register"))">

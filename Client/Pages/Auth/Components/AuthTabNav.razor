@code {

    int _activeIndex = 0;
    
    protected override void OnInitialized()
    {
        if (NavigationManager.Uri.Contains("login"))
        {
            _activeIndex = 0;
        }
        else if (NavigationManager.Uri.Contains("register"))
        {
            _activeIndex = 1;
        }
    }

}
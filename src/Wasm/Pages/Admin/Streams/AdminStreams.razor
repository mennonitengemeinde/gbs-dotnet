@page "/admin/streams"
@using Gbs.Wasm.Pages.Admin.Streams.Components
@attribute [Authorize(Policy = Policies.RequireAdminsAndSound)]

@inject IDialogService DialogService

<PageTitle>Streams - GBS</PageTitle>

<div class="tw-py-4 tw-space-y-4">
    <MudText Typo="Typo.h4">Streams</MudText>
    <MudButton StartIcon="@Icons.Filled.Add" Color="Color.Primary" Variant="Variant.Filled" Href="/admin/streams/create">
        New
    </MudButton>
</div>

<MudGrid Justify="Justify.FlexStart">
    @foreach (var liveStream in StreamState.Data)
    {
        <MudItem xs="12" sm="6" lg="4" xl="3">
            <AdminStreamCard LiveStream="@liveStream" OnDelete="HandleDelete" />
        </MudItem>
    }
</MudGrid>

@code {

    [CascadingParameter]
    UiState UiState { get; set; } = null!;

    [CascadingParameter]
    StreamState StreamState { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await StreamState.ForceFetch();
    }

    protected override void OnAfterRender(bool firstRender)
    {
        UiState.IsPageLoading = StreamState.IsLoading;
    }

    async Task HandleDelete(StreamResponse stream)
    {
        var result = await DialogService.ShowMessageBox(
            $"Delete {stream.Title}?",
            "Are you sure you want to continue?",
            "Delete!", cancelText: "Cancel");
        if (result != null)
        {
            await DeleteStream(stream);
        }
    }

    async Task DeleteStream(StreamResponse stream)
    {
        await StreamState.Delete(stream.Id);
        if (StreamState.Error != null)
        {
            StreamState.ClearError();
        }
    }

}
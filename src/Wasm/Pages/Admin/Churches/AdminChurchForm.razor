@page "/admin/churches/create"
@page "/admin/churches/{Id:int}/edit"
@attribute [Authorize(Policy = Policies.RequireAdmins)]
@using Gbs.Wasm.Pages.Admin.Churches.Components

<PageTitle>Churches Form - GBS</PageTitle>

@if (_isEdit)
{
    <ChurchUpdateForm Id="@Id.Value" />
}
else
{
    <ChurchCreateForm />
}

@code {
    bool _isEdit;

    [Parameter]
    public int? Id { get; set; }

    protected override void OnInitialized()
    {
        if (Id != null)
        {
            _isEdit = true;
        }
    }

}
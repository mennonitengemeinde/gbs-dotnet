@page "/admin/subjects"
@attribute [Authorize(Policy = Policies.RequireAdmins)]
@inherits BaseMatForm

<PageTitle>Subjects - GBS</PageTitle>

<div class="tw-py-4 tw-space-y-4">
    <MudText Typo="Typo.h4">Subjects</MudText>
    <MudButton StartIcon="@Icons.Filled.Add" Color="Color.Primary" Variant="Variant.Filled" Href="/admin/subjects/create">
        New
    </MudButton>
</div>

<MudTable Items="@SubjectState.Data" Hover="true" Breakpoint="Breakpoint.Sm" Loading="@SubjectState.IsLoading" LoadingProgressColor="Color.Info">
    <HeaderContent>
        <MudTh>Name</MudTh>
        <MudTh>Actions</MudTh>
    </HeaderContent>
    <RowTemplate>
        <MudTd DataLabel="Name">@context.Name</MudTd>
        <MudTd DataLabel="Actions" Class="tw-text-end">
            <MudIconButton Icon="@Icons.Material.Filled.Edit"
                           Size="Size.Small"
                           Href="@($"admin/subjects/{context.Id}/edit")" />
        </MudTd>
    </RowTemplate>
</MudTable>

@code {

    [CascadingParameter]
    public SubjectState SubjectState { get; set; } = null!;

    protected override async Task OnInitializedAsync()
    {
        await SubjectState.ForceFetch();
    }

}
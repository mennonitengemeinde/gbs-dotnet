@page "/admin/subjects/create"
@page "/admin/subjects/{Id:int}/edit"
@attribute [Authorize(Policy = Policies.RequireAdmins)]

@inject NavigationManager NavigationManager
@inject ISubjectStore SubjectStore
@inject IUiService UiService

<PageTitle>Subjects Form - GBS</PageTitle>

<EditForm Model="_model" OnValidSubmit="HandleValidSubmit">
    <DataAnnotationsValidator />
    <MudGrid Justify="Justify.Center" Class="tw-pt-8">
        <MudItem xs="12" sm="8" md="5">
            <MatFormCard Label="Subject"
                         IsEdit="@_isEdit"
                         IsLoading="@SubjectStore.IsLoading"
                         IsProcessing="@_isProcessing"
                         ReturnUrl="/admin/subjects">
                <MudTextField Label="Name"
                              @bind-Value="_model.Name"
                              For="() => _model.Name"
                              OnlyValidateIfDirty="true" />
            </MatFormCard>
        </MudItem>
    </MudGrid>
</EditForm>

@code {
    SubjectCreateDto _model = new();
    bool _isEdit;
    bool _isProcessing;

    [Parameter]
    public int? Id { get; set; }

    protected override async Task OnInitializedAsync()
    {
        if (Id.HasValue)
        {
            _isEdit = true;
            var subject = await SubjectStore.GetById(Id.Value);
            if (subject != null)
            {
                _model = new SubjectCreateDto
                {
                    Name = subject.Name
                };
            }
        }
    }

    async Task HandleValidSubmit()
    {
        _isProcessing = true;
        if (_isEdit)
        {
            await SubjectStore.Update(Id!.Value, _model);
        }
        else
        {
            await SubjectStore.Add(_model);
        }

        if (!SubjectStore.HasError)
        {
            _isProcessing = false;
            UiService.ShowSuccessAlert(_isEdit ? "Subject updated successfully" : "Subject added successfully");
            NavigationManager.NavigateTo("admin/subjects");
        }
        _isProcessing = false;
        SubjectStore.ClearErrors();
    }

}
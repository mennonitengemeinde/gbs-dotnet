<MudCard>
    <MudCardContent Class="tw-pt-2">
        <MudGrid Spacing="0" Class="tw-px-2 tw-pb-1">
            <MudItem xs="4" Class="tw-flex tw-items-end">
                <MudText Class="tw-text-sm tw-font-semibold">@GenerationName</MudText>
            </MudItem>
            <MudItem xs="4" Class="tw-flex tw-justify-center tw-items-end">
                <MudText Class="tw-font-semibold tw-text-lg">@Title</MudText>
            </MudItem>
            <MudItem xs="4" Class="tw-flex tw-justify-end tw-items-end">
                <MudIcon Icon="@Icons.Material.Filled.PlayCircle" Color="Color.Error"></MudIcon>
            </MudItem>
        </MudGrid>
        @if (Url != null)
        {
            <iframe class="tw-aspect-video tw-w-full tw-rounded" referrerpolicy="origin-when-cross-origin"
                    src="@Url"
                    allowfullscreen>
            </iframe>
        }
        else
        {
            <MudText Color="Color.Error" Class="tw-aspect-video tw-text-3xl tw-font-semibold tw-flex tw-justify-center tw-items-center">
                No Url found!
            </MudText>
        }
    </MudCardContent>
</MudCard>

@code {

    [Parameter, EditorRequired]
    public string GenerationName { get; set; } = string.Empty;
    
    [Parameter, EditorRequired]
    public string Title { get; set; } = string.Empty;
    
    [Parameter]
    public string? Url { get; set; }

}
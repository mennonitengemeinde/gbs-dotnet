@inherits BaseCascadingState<ChurchResponse, CreateChurchRequest, int, CreateChurchRequest>

<CascadingValue Value="this">
    @ChildContent
</CascadingValue>

@code {

    public override string BaseUrl => "api/churches";

    public async Task<ChurchResponse?> GetById(int id)
    {
        await Fetch();
        return Data.FirstOrDefault(c => c.Id == id);
    }

}